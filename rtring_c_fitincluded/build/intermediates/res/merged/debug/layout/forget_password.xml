<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <com.eva.android.widget.CustomeTitleBar
        android:id="@+id/forget_password_title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.eva.android.widget.CustomeTitleBar>
 	
 	<!-- 
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/logo" /> -->

    <TextView
        android:id="@+id/activity_sport_data_detail_sleepSumView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:text="@string/forget_password_find_back"
        android:textColor="#9A9A9A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/forget_password_edit_text"
        style="@style/forgot_edit_text_style"
        android:layout_width="fill_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/login_user"
        android:drawablePadding="10dp"
        android:ems="10"
        android:textColorHint="@color/bg_gray"
        android:textSize="16sp"
        android:hint="@string/forget_password_register_mail" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:hint="@string/forget_password_notice"
        android:text=""
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/forget_password_next_btn"
        style="@style/text_darkShadow8"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/common_btn_login"
        android:text="@string/general_send"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>