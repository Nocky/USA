<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/own_bracelet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/widget_title_bar_bg" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/common_title_btn_back" />

        <TextView
            android:id="@+id/activity_sport_data_detail_sleepSumView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/bracelet_title"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_36pt" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/bracelet_info_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bracelet_whilte_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
				
                <TextView
                    android:id="@+id/activity_own_bracelet_viewNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Someone"
                    android:textColor="@color/yellow_title"
                    android:textSize="@dimen/m00_font_size_26pt" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/bracelet_owner"
                    android:textColor="@color/gray_dark_for_text"
                    android:textSize="@dimen/m00_font_size_26pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="MAC:--:--:--:--:-- "
                android:textColor="@color/gray_dark_for_text"
                android:textSize="@dimen/m00_font_size_20pt" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="固件版本 --"
                android:textColor="@color/gray_dark_for_text"
                android:textSize="@dimen/m00_font_size_20pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bracelet_orange_bg"
            android:gravity="center_vertical|left"
            android:minWidth="150dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fullscreen_bt_bg" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:singleLine="true"
                    android:text="手表电量--%"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bracelet_time_icon" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="6dp"
                    android:text="@string/bracelet_sync_time"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:singleLine="true"
                android:text="--月--日--:--分"
                style="@style/text_darkShadow8"
                android:textColor="@color/text_light_green"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center" >
        <Button
            android:id="@+id/ring"
            style="@style/text_darkShadow8"
            android:layout_width="150dip"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_btn_login"
            android:text="locate"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_30pt" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/device_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/oad"
            style="@style/text_darkShadow8"
            android:layout_width="150dip"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_btn_login"
            android:text="Firmware"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_30pt" />
        
         <Button
            android:id="@+id/unbound"
            style="@style/text_darkShadow8"
            android:layout_width="150dip"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/common_btn_login"
            android:text="Disconnect"
            android:textColor="@color/white"
            android:textSize="@dimen/m00_font_size_30pt" />
       
    </LinearLayout>

</LinearLayout>