<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.eva.android.widget.CustomeTitleBar
        android:id="@+id/mywatch_titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.eva.android.widget.CustomeTitleBar>

    <ImageView
        android:id="@+id/watch_head"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/setting_watch_icon" />

    <LinearLayout
        android:id="@+id/activity_own_alarm"
        android:layout_width="fill_parent"
        android:layout_below="@+id/watch_head"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="闹钟提醒"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/activity_own_longsit"
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_own_alarm"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="久坐提醒"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/activity_own_control"
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_own_longsit"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="勿扰模式"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/activity_own_msg"
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_own_control"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="消息提醒"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/activity_own_power"
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_own_msg"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="电源管理"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
     <LinearLayout
        android:id="@+id/activity_own_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/activity_own_power"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:background="@drawable/common_settings_item_bg_group_full_gray"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="运动目标设置"
            android:textSize="16sp"
            android:layout_weight="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/common_list_item_rightarrow_icon" />

    </LinearLayout>
    
      
     

</RelativeLayout>