<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/report_page_active_composition_view_descView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textColor="#c6c6c6"
        style="@style/text_witheShadow3"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/report_page_active_composition_view_contentView"
            style="@style/text_witheShadow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="--"
            android:textColor="@color/gray_dark_for_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/report_page_active_composition_view_unitView"
            style="@style/text_witheShadow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="1dp"
            android:text="-"
            android:textColor="@color/gray_dark_for_text"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>