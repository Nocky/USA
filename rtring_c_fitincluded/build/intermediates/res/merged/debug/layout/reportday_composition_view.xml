<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="1dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/reportday_composition_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:padding="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/reportday_composition_view_descView"
            style="@style/text_witheShadow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/chat_bg_color"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/reportday_composition_view_contentView"
            style="@style/text_witheShadow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:text="0"
            android:textColor="@color/gray_dark_for_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reportday_composition_view_unitView"
            style="@style/text_witheShadow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:text="-"
            android:textColor="@color/gray_dark_for_text"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>