<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <com.linkloving.rtring_c_watch.logic.main.impl.CircularImage
        android:id="@+id/head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="19dp" >
    </com.linkloving.rtring_c_watch.logic.main.impl.CircularImage>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:paddingLeft="9dp"
        android:orientation="vertical" >


            <TextView
                android:id="@+id/concern_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/m00_font_size_24pt"
                android:textColor="@color/text_black_5a5a5a_color"
                android:singleLine="true"
                android:text="TextView" />

        <TextView
            android:id="@+id/concern_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="@dimen/m00_font_size_14pt"
            android:text="TextView" />
    </LinearLayout>
   <LinearLayout android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:gravity="center"
                             android:layout_marginRight="24dp"
                             android:orientation="horizontal"
                             >
         <TextView
                android:id="@+id/concern_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/m00_font_size_18pt"
                android:textColor="#999999"
                android:text="TextView" />

            <TextView
                  android:id="@+id/concern_unit_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="@dimen/m00_font_size_18pt"
                 android:textColor="#999999"
                android:text="@string/unit_step" />
   </LinearLayout>
</LinearLayout>
