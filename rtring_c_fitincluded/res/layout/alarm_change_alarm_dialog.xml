<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/alarm_change_alarm_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="@drawable/alarm_dialog_title"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:text="@string/alarm_modify_alarm"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dashed_bg"
            android:orientation="vertical" >

            <TimePicker
                android:id="@+id/alarm_change_alarm_dialog_timepicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/alarm_repeat"
                    android:textColor="@color/m00_text_black_666666_color" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_sunday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_sunday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_monday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_monday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_tuesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_tuesday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_wednessday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_wednesday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_thursday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_thursday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_friday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_friday" />

                <CheckBox
                    android:id="@+id/alarm_change_alarm_dialog_saturday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_check_box_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textColor="@color/m00_text_black_666666_color"
                    android:text="@string/alarm_desc_saturday" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <Button
                    android:id="@+id/alarm_change_alarm_dialog_cancelbtn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:padding="0dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_btn_blue"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/general_cancel"
                    android:textSize="18sp"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/alarm_change_alarm_dialog_savebtn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:padding="0dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/common_dia_btn"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/general_save"
                    android:textSize="18sp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>