<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/longsit_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.eva.android.widget.CustomeTitleBar
        android:id="@+id/body_info_titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.eva.android.widget.CustomeTitleBar>
    
    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/body_info_manCb"
            style="@style/text_darkShadow8"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:background="@drawable/common_raido_man_bg"
            android:button="@drawable/common_raido_man_button_bg"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="15dp"
            android:paddingTop="3dp"
            android:text="@string/register_form_view_man"
            android:textColor="@color/body_info_radio_btn_textcolor_selector"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/body_info_womanCb"
            style="@style/text_darkShadow8"
            android:layout_width="120dp"
            android:layout_height="38dp"
            android:background="@drawable/common_raido_woman_bg"
            android:button="@drawable/common_raido_woman_button_bg"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingStart="3dp"
            android:paddingEnd="15dp"
            android:paddingTop="3dp"
            android:text="@string/register_form_view_woman"
            android:textColor="@color/body_info_radio_btn_textcolor_selector"
            android:textSize="17sp" />
    </RadioGroup>
    
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/common_split_line" 
        android:contentDescription="@string/general_reduce"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/body_info_height"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/body_info_reduceHieght"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_reduce_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@drawable/common_reduce_btn" 
                android:contentDescription="@string/general_reduce"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/body_info_heightView"
            android:labelFor="@id/body_info_heightView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/body_input_bg"
            android:gravity="center"
            android:inputType="number"
            android:padding="0dp" />

        <LinearLayout
            android:id="@+id/body_info_plusHeight"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_plus_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/common_plus_btn"
                android:contentDescription="@string/general_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/unit_height"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/general_reduce"
        android:src="@drawable/common_split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/body_info_weight"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/body_info_reduceWieght"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_reduce_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@drawable/common_reduce_btn"
                android:contentDescription="@string/general_reduce" />
        </LinearLayout>

        <EditText
            android:id="@+id/body_info_weightView"
            android:labelFor="@id/body_info_weightView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/body_input_bg"
            android:gravity="center"
            android:inputType="number"
            android:padding="0dp" />

        <LinearLayout
            android:id="@+id/body_info_plusWeight"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_plus_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/common_plus_btn"
                android:contentDescription="@string/general_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/unit_weight"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/general_reduce"
        android:src="@drawable/common_split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/body_info_age"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/body_info_reduceAge"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_reduce_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="@drawable/common_reduce_btn"
                android:contentDescription="@string/general_reduce" />
        </LinearLayout>

        <EditText
            android:id="@+id/body_info_ageView"
            android:labelFor="@id/body_info_ageView"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/body_input_bg"
            android:gravity="center"
            android:inputType="number"
            android:padding="0dp" />

        <LinearLayout
            android:id="@+id/body_info_plusAge"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:background="@drawable/body_plus_btn_bg"
            android:clickable="true"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/common_plus_btn"
                android:contentDescription="@string/general_add" />
        </LinearLayout>

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/unit_age"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/common_split_line" 
        android:contentDescription="@string/general_reduce"/>

    <LinearLayout
        android:id="@+id/body_info_bmiLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/body_info_bmi"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/body_info_bmi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_red"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/body_info_body_type"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/body_info_bmi_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/text_red"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/body_info_save_btn"
        style="@style/text_darkShadow7"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_btn_login"
        android:text="@string/general_save"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>