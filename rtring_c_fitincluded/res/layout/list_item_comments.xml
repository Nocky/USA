<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:paddingLeft="26dp" >

    <LinearLayout
        android:layout_width="197dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="17.5dp" >

        <TextView
            android:id="@+id/comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/m00_text_black_333333_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <com.linkloving.rtring_c_watch.logic.main.impl.BoldCircularImage
                android:id="@+id/head"
                android:layout_width="27dp"
                android:layout_height="27dp" >
            </com.linkloving.rtring_c_watch.logic.main.impl.BoldCircularImage>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/green_for_comments_text"
                        android:textSize="@dimen/m00_font_size_15pt" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/m00_font_size_15pt" />

                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="ddddddddddddddddddddddddddddddddddddddd"
                        android:textColor="#636363"
                        android:textSize="@dimen/m00_font_size_15pt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6sp"
                    android:textColor="#929292"
                    android:textSize="7sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="right|bottom"
            android:paddingBottom="17dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/comments_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="11dd"
                android:textColor="@color/green_for_comments_text"
                android:textSize="@dimen/m00_font_size_16pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/relationship_comment"
                android:textColor="@color/green_for_comments_text"
                android:textSize="@dimen/m00_font_size_16pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=">>"
                android:textColor="@color/green_for_comments_text"
                android:textSize="@dimen/m00_font_size_16pt" />
        </LinearLayout>
        
            <TextView
                        android:id="@+id/comments_item_unread_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/unread_bg"
                        android:layout_gravity="right|top"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginRight="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                       />
    </FrameLayout>

</LinearLayout>